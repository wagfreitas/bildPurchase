# Oracle Fusion Configuration
FUSION_BASE_URL=https://your-fusion-instance.oraclecloud.com
FUSION_REST_VERSION=11.13.18.05
EXTERNAL_REF_FIELD=ExternalReference

# OAuth2 Configuration (Oracle IDCS/Identity Domain)
OAUTH_TOKEN_URL=https://your-identity-domain.identity.oraclecloud.com/oauth2/v1/token
OAUTH_CLIENT_ID=your-client-id
OAUTH_CLIENT_SECRET=your-client-secret

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=fusion_api
DB_PASSWORD=your-db-password
DB_DATABASE=fusion_requisitions

# Redis Configuration (for BullMQ)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Application Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=debug

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_PATH=./uploads

# Batch Processing Configuration
BATCH_CONCURRENCY=5
BATCH_RETRY_ATTEMPTS=3
BATCH_RETRY_DELAY=5000

# Observability
ENABLE_METRICS=true
METRICS_PORT=9090
